
{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}